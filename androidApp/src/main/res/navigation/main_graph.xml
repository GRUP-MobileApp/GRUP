<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_graph"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.grup.android.ui.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/enterActionAmount"
            app:destination="@id/actionAmountFragment" />
        <action
            android:id="@+id/createGroup"
            app:destination="@id/createGroupFragment" />
        <action
            android:id="@+id/viewMembers"
            app:destination="@id/membersFragment" />
        <action
            android:id="@+id/openNotifications"
            app:destination="@id/notificationsFragment" />
        <action
            android:id="@+id/openGroupInvites"
            app:destination="@id/groupInvitesFragment" />
    </fragment>

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.grup.android.ui.WelcomeFragment"
        android:label="WelcomeFragment" >
        <action
            android:id="@+id/startMainFragment"
            app:destination="@id/mainFragment" />
    </fragment>

    <fragment
        android:id="@+id/createGroupFragment"
        android:name="com.grup.android.ui.CreateGroupFragment"
        android:label="CreateGroupFragment" />
    <fragment
        android:id="@+id/membersFragment"
        android:name="com.grup.android.ui.GroupMembersFragment"
        android:label="MembersFragment" />
    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.grup.android.ui.NotificationsFragment"
        android:label="NotificationsFragment" />

    <fragment
        android:id="@+id/actionAmountFragment"
        android:name="com.grup.android.ui.ActionAmountFragment"
        android:label="DebtActionFragment" >
        <action
            android:id="@+id/createDebtAction"
            app:destination="@id/debtActionFragment" />
    </fragment>

    <fragment
        android:id="@+id/debtActionFragment"
        android:name="com.grup.android.ui.DebtActionFragment"
        android:label="DebtActionFragment" >
    </fragment>
    <fragment
        android:id="@+id/groupInvitesFragment"
        android:name="com.grup.android.ui.GroupInvitesFragment"
        android:label="GroupInvitesFragment" />
</navigation>